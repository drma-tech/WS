@page "/"
@page "/index"
@using WS.WEB.Resources

@inherits PageCore<Index>

@inject IJSRuntime JsRuntime

<SeoHeader Title="Web Developer Tools" Description="@SeoTranslations.AppDescription" Url="/" Keywords="@(["sitemap", "robot.txt", "manifest", "service-worker", "security.txt", "gpc.json", "change-password", "reset-password"])"></SeoHeader>
@* <GoogleAdSense Section="@GoogleAdSense.AdUnit.Main"></GoogleAdSense> *@

<HeadPage Title="@SeoTranslations.AppName" Text="@SeoTranslations.AppDescription"></HeadPage>

<SectionComponent Title="Discovery & Search" Description="Tell search engines what to index, improve crawling speed, and ensure important pages and media appear in search results." IconName="@IconsFA.Solid.Icon("magnifying-glass").Font">
    <BodyFragment>
        <MudGrid Spacing="2">
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="robots.txt" ActionName="Check it out" Href="/robots"
                             Description="Tells crawlers which areas to scan or block. Prevents private paths from being indexed and focuses search engines on the right content.">
                </WrappedCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="sitemap generator" ActionName="Check it out" Href="/sitemap"
                             Description="Lists site pages in XML. Ensures search engines find and index content faster, critical for large or poorly linked websites.">
                </WrappedCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="extensions sitemap generator" ActionName="Check it out" Href="/extensions-sitemap"
                             Description="Extends sitemaps to media. Helps search engines properly index images and videos, improving visibility in media searches..">
                </WrappedCard>
            </MudItem>
        </MudGrid>
    </BodyFragment>
</SectionComponent>

<SectionComponent Title="Device & App Integration" Description="Make your site behave like an app with install support, offline access, proper icons, and consistent cross-device branding." IconName="@IconsFA.Solid.Icon("mobile-screen").Font">
    <BodyFragment>
        <MudGrid Spacing="2">
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="manifest.webmanifest" ActionName="Coming soon"
                             Description="Defines site name, colors, and icons. Required for PWA install, making the site look and act like a native app.">
                </WrappedCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="service-worker.js" ActionName="Coming soon"
                             Description="Background script enabling offline mode, caching, and push. Improves reliability and user experience on weak connections.">
                </WrappedCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="Layout & Icons" ActionName="Coming soon"
                             Description="Provides favicons, app icons, and theme color. Ensures consistent branding and good display on browsers and devices.">
                </WrappedCard>
            </MudItem>
        </MudGrid>
    </BodyFragment>
</SectionComponent>

<SectionComponent Title="Security & Privacy" Description="Protect users, reduce vulnerabilities, and show compliance with privacy standards and security best practices." IconName="@IconsFA.Solid.Icon("lock").Font">
    <BodyFragment>
        <MudGrid Spacing="2">
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="security.txt" ActionName="Coming soon"
                             Description="File that tells researchers how to report vulnerabilities. Builds trust and helps fix issues faster." />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="gpc.json" ActionName="Coming soon"
                             Description="Signals privacy preference to browsers. Supports GDPR/CCPA compliance and shows respect for user choice." />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="change-password / reset-password" ActionName="Coming soon"
                             Description="Standard links for browsers to access password reset. Improves usability and reduces phishing risk." />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="Security Headers" ActionName="Coming soon"
                             Description="Adds CSP, HSTS, etc. Prevents attacks like XSS and clickjacking. Essential even for static web apps." />
            </MudItem>
        </MudGrid>
    </BodyFragment>
</SectionComponent>

<SectionComponent Title="SEO & Sharing" Description="Control how your site appears in search results and social media shares to boost visibility and engagement." IconName="@IconsFA.Solid.Icon("share-nodes").Font">
    <BodyFragment>
        <MudGrid Spacing="2">
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="Open Graph tags" ActionName="Coming soon"
                             Description="Define title, description, and image for link previews. Makes shares look professional and drive more clicks." />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="Twitter Cards" ActionName="Coming soon"
                             Description="Special meta tags for Twitter/X. Improves link previews, making content stand out on social feeds." />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="Structured Data (JSON-LD)" ActionName="Coming soon"
                             Description="Adds metadata for articles, products, events. Enables Google rich results and boosts visibility." />
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <WrappedCard Title="hreflang / canonical" ActionName="Coming soon"
                             Description="hreflang sets language/region; canonical prevents duplicate URLs. Both improve SEO and user targeting." />
            </MudItem>
        </MudGrid>
    </BodyFragment>
</SectionComponent>