@page "/support/terms"
@using WS.WEB.Resources
<SeoHeader Title="Terms of Use" Description="@SeoTranslations.AppDescription" Url=@($"/support/terms")></SeoHeader>

<style>
    .terms-container {
        max-width: 900px;
        margin: 32px auto;
        padding: 40px 24px 32px 24px;
        background: var(--mud-palette-background, #fff);
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.09);
    }

    .terms-title {
        text-align: center;
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--mud-palette-text-primary, #222);
    }

    .terms-subtitle {
        text-align: center;
        color: var(--mud-palette-text-secondary, #555);
        font-size: 1.1rem;
        margin-bottom: 2.2rem;
    }

    .terms-section {
        margin-bottom: 2.2rem;
    }

        .terms-section h2 {
            margin-bottom: 0.7rem;
            color: var(--mud-palette-primary, #1976d2);
            font-size: 1.18rem;
            font-weight: 500;
        }

        .terms-section p {
            text-align: justify;
            margin-bottom: 0.5rem;
            color: var(--mud-palette-text-primary, #333);
            line-height: 1.7;
        }

        .terms-section ul {
            text-align: justify;
            margin-bottom: 0.5rem;
            color: var(--mud-palette-text-primary, #333);
            line-height: 1.7;
            padding-left: 1.4rem;
            list-style-type: disc;
        }

            .terms-section ul li {
                padding-left: 0.1rem;
            }
</style>

<div class="terms-container">
    <h1 class="terms-title">Terms of Use</h1>
    <div class="terms-subtitle">
        Welcome to <b>@ProjectTitle</b> (<a href="https://@ProjectDomain" target="_blank">@ProjectDomain</a>)!<br />
        By accessing or using this service, you agree to these Terms of Use. Please read them carefully.
    </div>
    <div class="terms-section">
