@page "/support/do-not-sell"
@using WS.WEB.Resources
<SeoHeader Title="Privacy" Url=@($"/support/do-not-sell")></SeoHeader>

<style>
    .privacy-container {
        max-width: 900px;
        margin: 32px auto;
        padding: 40px 24px 32px 24px;
        background: var(--mud-palette-background, #fff);
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.09);
    }

    .privacy-title {
        text-align: center;
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--mud-palette-text-primary, #222);
    }

    .privacy-subtitle {
        text-align: center;
        color: var(--mud-palette-text-secondary, #555);
        font-size: 1.1rem;
        margin-bottom: 2.2rem;
    }

    .privacy-section {
        margin-bottom: 2.2rem;
    }

        .privacy-section h2 {
            margin-bottom: 0.7rem;
            color: var(--mud-palette-primary, #1976d2);
            font-size: 1.18rem;
            font-weight: 500;
        }

        .privacy-section p {
            text-align: justify;
            margin-bottom: 0.5rem;
            color: var(--mud-palette-text-primary, #333);
            line-height: 1.7;
        }

        .privacy-section ul {
            text-align: justify;
            margin-bottom: 0.5rem;
            color: var(--mud-palette-text-primary, #333);
            line-height: 1.7;
            padding-left: 1.4rem;
            list-style-type: disc;
        }

            .privacy-section ul li {
                padding-left: 0.1rem;
            }
</style>

<div class="privacy-container">
    <h1 class="privacy-title">Do Not Sell or Share My Personal Information</h1>
    <div class="privacy-section">
        <p>We do not sell or share your personal data in exchange for money or any other valuable consideration.</p>
        <p>However, certain third-party tools used on our platform (e.g., for analytics or advertising) may collect data that could be considered a “share” under the California Consumer Privacy Act (CCPA/CPRA).</p>
        <p>To manage your preferences, please adjust your cookie settings or disable tracking via your browser.</p>
        <p>If you are a California resident and have any questions, contact us at: support@web-standards.com</p>
    </div>
</div>

@code {
    public string? ProjectTitle => SeoTranslations.AppName;
    public string ProjectDomain => "www.web-standards.com";
}