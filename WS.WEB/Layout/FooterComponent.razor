@inject NavigationManager Navigation

@if ((Support && AppStateStatic.Breakpoint <= Breakpoint.Sm) || (!Support && AppStateStatic.Breakpoint > Breakpoint.Sm))
{
    <MudDivider Class="@Css.Build().Small("mb").Large("mt")"></MudDivider>
    <MudGrid Justify="Justify.Center" Style="overflow: auto;" Spacing="@Css.SpaceSmall">
        <MudItem xs="12" sm="12" md="3">
            <MudList T="string" Color="Color.Surface" Dense="true" Gutters="false">
                <MudListSubheader Gutters="false">
                    <MudText Color="Color.Primary" Typo="Typo.subtitle1">
                        DRMA Tech
                    </MudText>
                    <MudText Color="Color.Secondary" Typo="Typo.subtitle2">
                        @GlobalTranslations.DiscoverProducts
                    </MudText>
                </MudListSubheader>
                <MudListItem Href="https://www.streamingdiscovery.com/" Target="_blank" Class="py-0">
                    <ChildContent>
                        <MudImage Src="https://www.streamingdiscovery.com/icon/icon-71.png" Class="me-1" Style="width: 20px; vertical-align: top;" />
                        Streaming Discovery
                    </ChildContent>
                </MudListItem>
                <MudListItem Href="https://www.modern-matchmaker.com/" Target="_blank" Class="py-0">
                    <ChildContent>
                        <MudImage Src="https://www.modern-matchmaker.com/icon/icon-71.png" Class="me-1" Style="width: 20px; vertical-align: top;" />
                        Modern Matchmaker
                    </ChildContent>
                </MudListItem>
                <MudListItem Href="https://www.my-next-spot.com/" Target="_blank" Class="py-0">
                    <ChildContent>
                        <MudImage Src="/logo/next-spot.png" Class="me-1" Style="width: 20px; vertical-align: top;" />
                        My Next Spot
                    </ChildContent>
                </MudListItem>
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string" Dense="true" Gutters="false">
                <MudListSubheader Gutters="false">
                    <MudText Color="Color.Secondary">
                        Company
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="About us" Href="/support/about-us" Class="py-0" />
                <MudListItem Text="Website" Href="https://www.drma-tech.com/" Target="_blank" Class="py-0" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string" Dense="true" Gutters="false">
                <MudListSubheader Gutters="false">
                    <MudText Color="Color.Secondary">
                        Stores
                    </MudText>
                </MudListSubheader>
                <MudListItem Href="https://apps.microsoft.com/detail/9pcf521f26lz" Target="_blank" Class="py-0">
                    <ChildContent>
                        <MudImage Src="/logo/microsoft-store.png" Class="me-1" Style="width: 20px; vertical-align: top;" />
                        Microsoft Store
                    </ChildContent>
                </MudListItem>
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string" Dense="true" Gutters="false">
                <MudListSubheader Gutters="false">
                    <MudText Color="Color.Secondary">
                        Support
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="Contact" Href="mailto:support@web-standards.com" Class="py-0" />
                <MudListItem Text="FAQ" Href="/support/faq" Class="py-0" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string" Dense="true" Gutters="false">
                <MudListSubheader Gutters="false">
                    <MudText Color="Color.Secondary">
                        Legal
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="Terms of Use" Href="/support/terms" Class="py-0" />
                <MudListItem Text="Privacy Policy" Href="/support/privacy" Class="py-0" />
                <MudListItem Text="Credits" Href="/support/credits" Class="py-0" />
            </MudList>
        </MudItem>
    </MudGrid>
}

@code {
    [Parameter] public bool Support { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        AppStateStatic.BreakpointChanged += breakpoint => StateHasChanged();
        AppStateStatic.BrowserWindowSizeChanged += size => StateHasChanged();
    }
}
